<h1>Catan Stats</h1>
<%= form_tag("home/new_game", :method => "get") do %>
  <%= submit_tag("New Game?") %>
<% end %>
<br /><br />
<%= form_tag("home/existing_game", :method => "get") do %>
	<%= label_tag(:game_id, "Existing game id:") %>
  <%= text_field_tag(:game_id) %>
  <%= submit_tag("Go") %>
<% end %>

<div id="user_nav">
 	<% if current_user %>
    Welcome, <%= current_user.name %>
		<%= link_to "Sign Out", signout_path %>
	<% else %>
  	<%= link_to "Sign in with Facebook", "/auth/facebook" %>
		<br />
		<br />
  	<%= link_to "Sign in with Google", "/auth/google_oauth2" %>
	<% end %>
</div>